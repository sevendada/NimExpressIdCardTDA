<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	<item android:state_enabled="true" android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff1d1d" />
            <stroke
                android:width="1dp"
                android:color="#75767B" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <solid
                android:color="#FF0000" />
            <stroke
                android:width="1dp"
                android:color="#75767B" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_enabled="false" >
    <shape>
      <solid
          android:color="#A2A7AA" />
      <stroke
          android:width="1dp"
          android:color="#75767B" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
      <corners android:radius="2dp" />
    </shape>
  </item>
</selector>
