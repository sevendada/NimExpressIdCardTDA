<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_data_barcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:text="บาร์โค้ด : 12345678990123" />

            <TextView
                android:id="@+id/text_data_barcode_runno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:text="1/1" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_data_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:text="สินค้า : xxxx" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/text_input_width"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="0.2"
                android:background="@drawable/input_style"
                android:hint="กว้าง (ซม.)"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:textSize="12sp"
                android:imeOptions="actionNext" />

            <EditText
                android:id="@+id/text_input_long"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="0.2"
                android:background="@drawable/input_style"
                android:hint="ยาว (ซม.)"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:textSize="12sp"
                android:imeOptions="actionNext" />

            <EditText
                android:id="@+id/text_input_height"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="0.2"
                android:background="@drawable/input_style"
                android:hint="สูง (ซม.)"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:textSize="12sp"
                android:imeOptions="actionNext" />

            <EditText
                android:id="@+id/text_input_weight"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="0.2"
                android:background="@drawable/input_style"
                android:hint="น้ำหนัก (ซม.)"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:textSize="12sp"
                android:imeOptions="actionNext" />

            <EditText
                android:id="@+id/text_input_temperature"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="0.2"
                android:background="@drawable/input_style"
                android:hint="อุณหภูมิ"
                android:inputType="text"
                android:padding="5dp"
                android:textSize="12sp"
                android:imeOptions="actionNext" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <!--<EditText-->
            <!--android:id="@+id/text_input_box_nimex"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@drawable/input_disable_style"-->
            <!--android:enabled="false"-->
            <!--android:hint="บาร์โค้ดกล่อง NiMExpress"-->
            <!--android:inputType="textPersonName"-->
            <!--android:padding="5dp"-->
            <!--android:textSize="14sp" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/input_disable_style"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/text_barcode_box"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="บาร์โค้ดกล่อง NiMExpress" />
            </LinearLayout>

            <info.hoang8f.widget.FButton
                android:id="@+id/bt_confirm_box_nimex"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="สแกนกล่อง"
                android:textColor="@android:color/white"
                android:textSize="14sp"

                app:cornerRadius="5dp"
                app:shadowColor="@color/fbutton_color_belize_hole"
                app:shadowEnabled="false" />

            <info.hoang8f.widget.FButton
                android:id="@+id/bt_cancel_box_nimex"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.6"
                android:text="ยกเลิก"
                android:textColor="@android:color/white"
                android:textSize="14sp"

                app:cornerRadius="5dp"
                app:shadowColor="@color/fbutton_color_asbestos"
                app:shadowEnabled="false" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@color/gray_underling" />
    </LinearLayout>
</LinearLayout>