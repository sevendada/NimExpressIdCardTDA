<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/button_sign_activity"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:drawableLeft="@mipmap/ic_action_sign"
            android:text="เซ็นต์ผ่านแอป"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_sign_capture"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/ic_action_capture"
            android:text="ถ่ายรูป"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>